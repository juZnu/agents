{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "CommonJS",                  
    "outDir": "./dist",
    "esModuleInterop": true,               
    "allowSyntheticDefaultImports": true,  // <-- Add this
    "downlevelIteration": true,             // <-- Add this
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src", "tests"],             // <-- Add "tests" folder too!
  "exclude": ["node_modules", "dist"]
}
